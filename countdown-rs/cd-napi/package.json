{
  "name": "countdown-napi",
  "version": "0.0.0",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "type": "module",
  "main": "index.js",
  "files": [
    "index.d.ts",
    "index.js"
  ],
  "napi": {
    "name": "cd-napi",
    "triples": {
      "defaults": false,
      "additional": [
        "x86_64-pc-windows-msvc"
      ]
    }
  },
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "bench": "node --import @swc-node/register/esm-register benchmark/bench.ts",
    "build": "napi build --platform --release",
    "dev": "napi build --platform",
    "format": "prettier -w . && cargo fmt",
    "lint": "cargo clippy && oxlint -c .oxlintrc.json --disable-react-plugin --fix . && eslint ."
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4",
    "@swc-node/register": "^1.10.6",
    "@swc/core": "^1.6.13",
    "@taplo/cli": "^0.7.0",
    "eslint": "^9.15.0",
    "eslint-plugin-oxlint": "^0.12.0",
    "oxlint": "^0.12.0",
    "prettier": "^3.3.3",
    "tinybench": "^3.0.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.15.0"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    }
  }
}
